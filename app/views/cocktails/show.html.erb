<div class="show-cocktail">
  <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill if @cocktail.photo.attached? %>')">
    <h1><%= @cocktail.name %></h1>
  </div>

  <div class="description">
      <% @doses.each do |dose| %>
      <div class="card">
        <%=  dose.description %> <%=dose.ingredient.name %><%= link_to dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
            <p><i class="fas fa-trash-alt"></i></p>
          <% end %>
        </div>
      <% end %>
    <div class="d-flex">
      <div class="redirect"><%= link_to "Add a new dosis", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost-dark" %></div>
      <a class="btn btn-ghost-dark" href="/">Back to Overview</a>
    </div>
</div>
</div>
